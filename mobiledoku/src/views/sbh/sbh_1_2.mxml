<s:View xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark" 
		title="Getraenkezubereitung"
		viewActivate="onViewActivated()"
		viewDeactivate="onViewDeactivated()"
		gestureSwipe="onSwipe(event)">
	
	
	<fx:Script>
		<![CDATA[
			import mx.core.FlexGlobals;
			
			import renderers.SliderListRenderer;
			
			import views.Home;			
			import views.Stoerungsbehebung;
			
			protected function onViewActivated():void{				
				// Setze Farbe der ActionBar -> setze Klasse für s:ViewNavigator
				navigator.setStyle("styleName", "sbh");
				
				// aktiviere Getränkezubereitungs Navigationspunkt in Navigation links
				(FlexGlobals.topLevelApplication.componentsList.dataGroup.getElementAt(6) as Object).setNavState();
			}
			protected function onViewDeactivated():void {
				// deaktiviere Getränkezubereitungs Navigationspunkt in Navigation links
				(FlexGlobals.topLevelApplication.componentsList.dataGroup.getElementAt(6) as Object).resetNavState();
			}
			
			// handelt Swipe-Verhalten (via gestureSwipe="")
			private function onSwipe(event:TransformGestureEvent):void {
				// offsetX -1: Swipe nach links (vor)
				// offsetX 1: Swipe nach rechts (zurück)
				if(event.offsetX == -1) {
					navigator.pushView(Stoerungsbehebung, null, null, pushLeft);
				}
			}
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- definiere Push-Richtungen (für Slider in Anleitung) -->
		<s:SlideViewTransition id="pushRight" mode="push" duration="200" direction="right" />
		<s:SlideViewTransition id="pushLeft" mode="push" duration="200" direction="left" />
	</fx:Declarations>
	
	<s:VGroup verticalAlign="top">
		<!-- Container Titel -->
		<s:HGroup verticalAlign="top" horizontalAlign="left" paddingTop="105" paddingLeft="80" paddingRight="80" paddingBottom="50">
			<s:Label text="{resourceManager.getString('resources', 'SBH_T1')}" color="black" styleName="slider-title" />
		</s:HGroup>
		
		<!-- Container Medieninhalt-->
		<s:HGroup horizontalAlign="center" paddingBottom="30">
			<s:Image source="@Embed('ressources/images/9_1_2.jpg')"
					 width="1080" height="608"
					 scaleMode="letterbox" smooth="true" smoothingQuality="high"
					 horizontalCenter="0" verticalCenter="0"
			/>
		</s:HGroup>
		
		<!-- Container Trennlinie horizontal -->
		<s:HGroup horizontalAlign="left" paddingLeft="80" paddingRight="80" paddingBottom="60" >	
			<s:Rect bottom="0" width="920" >
				<s:stroke>
					<s:SolidColorStroke color="#bfbfbf" weight="2" />
				</s:stroke>
			</s:Rect>
		</s:HGroup>
		
		<!-- Container Text-Beschreibung -->
		<s:HGroup horizontalAlign="left" paddingLeft="80" paddingRight="80">
			<s:Label text="Befindet sich Wasser im Wassertank?" width="830"/>
		</s:HGroup>
		<s:HGroup horizontalAlign="left" paddingLeft="80" paddingRight="80">
			<s:VGroup width="50%">
				<s:Button click="navigator.pushView(Stoerungsbehebung)" label="ja" styleName="decisionbtn" />
			</s:VGroup>
			<s:VGroup width="50%">
				<s:Button click="navigator.pushView(Home)" label="nein" styleName="decisionbtn" />
			</s:VGroup>
		</s:HGroup>
	</s:VGroup>	
	
	<!-- Container Slider-Buttons -->
	<s:Group width="100%" height="148" bottom="0">
		<s:Rect width="100%" height="100%">
			<s:fill><s:SolidColor color="0xfecb00" /></s:fill>
		</s:Rect>
		<s:HGroup horizontalCenter="0" gap="50" paddingTop="35">
			<s:Button click="navigator.pushView(Stoerungsbehebung)" styleName="sliderbtn-active" />
			<s:Button click="navigator.pushView(Stoerungsbehebung, null, null, pushLeft)" styleName="sliderbtn" />
			<s:Button click="navigator.pushView(Stoerungsbehebung, null, null, pushLeft)" styleName="sliderbtn" />
			<s:Button click="navigator.pushView(Stoerungsbehebung, null, null, pushLeft)" styleName="sliderbtn" />
		</s:HGroup>
	</s:Group>	
	
</s:View>
