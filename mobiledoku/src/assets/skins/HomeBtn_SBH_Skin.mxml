<?xml version="1.0" encoding="utf-8"?>
<!-- 
	Button-Skin für den Störungsbehebung-Button auf dem Startscreen.	

	Autor: 		Petra Weiss
	Datum:		6.2.2014
	Gesehen:	http://www.flexer.info/2009/06/12/how-to-skin-a-button-with-icon-in-flex-4-sdk-spark/
-->	
<s:SparkSkin 
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	minWidth="340" minHeight="340"
	> 
	
	<fx:Metadata> 
		[HostComponent("spark.components.Button")] 
	</fx:Metadata> 
	
	<fx:Script> 
		<![CDATA[         
			static private const exclusions:Array = ["labelElement"]; 
			override public function get colorizeExclusions():Array 
			{
				return exclusions;
			} 
		]]>        
	</fx:Script> 
	
	<s:states> 
		<s:State name="up" /> 
		<s:State name="over" /> 
		<s:State name="down" /> 
		<s:State name="disabled" /> 
	</s:states> 
	
	<s:Ellipse width="100%" height="100%">	
		<s:stroke.up>
			<s:SolidColorStroke color="#ffffff" alpha="0.3" weight="8"/> 
		</s:stroke.up> 
		<s:fill.up> 
			<s:LinearGradient rotation="90"> 
				<s:entries>  
					<s:GradientEntry color="0xfecb00" 
									 ratio="0" alpha="1"/> 
					<s:GradientEntry color="0xe9bc08" 
									 ratio="0.8" alpha="1"/> 
				</s:entries> 
			</s:LinearGradient> 
		</s:fill.up>  

		<s:stroke.over>
			<s:SolidColorStroke color="#ffffff" alpha="0.3" weight="20" /> 
		</s:stroke.over> 
		<s:fill.over>  
			<s:LinearGradient rotation="90"> 
				<s:entries>  
					<s:GradientEntry color="0xfecb00" 
									 ratio="0" alpha="1"/> 
					<s:GradientEntry color="0xe9bc08" 
									 ratio="0.8" alpha="1"/> 
				</s:entries> 
			</s:LinearGradient> 
		</s:fill.over>  

		<s:stroke.down>
			<s:SolidColorStroke color="#ffffff" alpha="0.3" weight="20" /> 
		</s:stroke.down> 
		<s:fill.down>  
			<s:LinearGradient rotation="90"> 
				<s:entries>  
					<s:GradientEntry color="0xfecb00" 
									 ratio="0" alpha="1"/> 
					<s:GradientEntry color="0xe9bc08" 
									 ratio="0.8" alpha="1"/> 
				</s:entries> 
			</s:LinearGradient> 
		</s:fill.down> 
		
	</s:Ellipse>
	
	<!-- Icons -->
	<s:Image source.up ="@Embed('assets/icons/btn_sbh_w.png')"			 
			 width="200" height="200"
			 scaleMode="letterbox" smooth="true" smoothingQuality="high"
			 horizontalCenter="-6" verticalCenter="-4"   
			 />
	<s:Image source.over="@Embed('assets/icons/btn_sbh_w.png')"
			 source.down="@Embed('assets/icons/btn_sbh_w.png')"
			 scaleMode="letterbox" smooth="true" smoothingQuality="high"
			 width="150" height="150"
			 horizontalCenter="-6" verticalCenter="-4" 
			 />


</s:SparkSkin>