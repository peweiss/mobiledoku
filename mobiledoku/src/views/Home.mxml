		</s:VGroup>
		<s:VGroup>
			<!-- Trennlinie vertikal -->
			<s:Line xFrom="6" xTo="6" yFrom="0" yTo="550" height="100%">
				<s:stroke>
					<s:SolidColorStroke color="#bfbfbf" weight="2" caps="square"/>
				</s:stroke>
			</s:Line> 			
		</s:VGroup>
