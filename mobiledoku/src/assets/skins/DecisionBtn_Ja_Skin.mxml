-->	
<s:SparkSkin 
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	width="280" height="115"
	> 
	
	<fx:Metadata> 
		[HostComponent("spark.components.Button")] 
	</fx:Metadata> 
	
	<fx:Script> 
		<![CDATA[         
			static private const exclusions:Array = ["labelElement"]; 
			override public function get colorizeExclusions():Array 
			{
				return exclusions;
			} 
		]]>        
	</fx:Script> 
	
	<s:states> 
		<s:State name="up" /> 
		<s:State name="over" /> 
		<s:State name="down" /> 
		<s:State name="disabled" /> 
	</s:states> 
	
	<s:Rect width="100%" height="100%">	
		<!-- definiere Button-Kontur und -Fläche für up-Status -->
		<s:stroke.up>
			<s:SolidColorStroke color="#ffffff" alpha="0.3" weight="8"/> 
		</s:stroke.up> 
		<s:fill.up> 
			<s:LinearGradient rotation="90"> 
				<s:entries>  
					<s:GradientEntry color="0xe6e9e9" 
									 ratio="0" alpha="1"/> 
					<s:GradientEntry color="0xbfbfbf" 
									 ratio="0.8" alpha="1"/> 
				</s:entries> 
			</s:LinearGradient> 
		</s:fill.up>  
		
		<!-- definiere Button-Kontur und -Fläche für over-Status -->
		<s:stroke.over>
			<s:SolidColorStroke color="#ffffff" alpha="0.3" weight="8" /> 
		</s:stroke.over> 
		<s:fill.over>  
			<s:LinearGradient rotation="90"> 
				<s:entries>  
					<s:GradientEntry color="0xdadddd" 
									 ratio="0" alpha="1"/> 
					<s:GradientEntry color="0xb5b5b5" 
									 ratio="0.8" alpha="1"/> 
				</s:entries> 
			</s:LinearGradient> 
		</s:fill.over>  

		<!-- definiere Button-Kontur und -Fläche für down-Status -->
		<s:stroke.down>
			<s:SolidColorStroke color="#ffffff" alpha="0.3" weight="8" /> 
		</s:stroke.down> 
		<s:fill.down>  
			<s:LinearGradient rotation="90"> 
				<s:entries>  
					<s:GradientEntry color="0xdadddd" 
									 ratio="0" alpha="1"/> 
					<s:GradientEntry color="0xb5b5b5" 
									 ratio="0.8" alpha="1"/> 
				</s:entries> 
			</s:LinearGradient> 
		</s:fill.down> 
		
	</s:Rect>
	
	<!-- Icons -->
	<s:Image source.up ="@Embed('assets/icons/btn_ja.png')"
			 width="90" height="90" x="20" y="5"
			 scaleMode="letterbox" smooth="true" smoothingQuality="high"
	/>
	<s:Image source.over="@Embed('assets/icons/btn_ja.png')"
			 source.down="@Embed('assets/icons/btn_ja.png')"
			 width="90" height="90" x="20" y="5"
			 scaleMode="letterbox" smooth="true" smoothingQuality="high" 
	/>
	
	<!-- Text -->
	<s:Label text="{resourceManager.getString('resources', 'DEC_JA')}" top="0" verticalCenter="0" x="130" color="0x1d1d1b" />

</s:SparkSkin>