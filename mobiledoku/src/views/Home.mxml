			<s:Button click="navigator.pushView(Getraenkezubereitung)" styleName="homebtn-entkalkung" />
			<s:Label click="navigator.pushView(Getraenkezubereitung)" text="{resourceManager.getString('resources', 'ENTKALKUNG')}" />
		</s:VGroup>
